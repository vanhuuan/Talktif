    Layout = null;
}
@using Talktif.Models;
@model MessageRequest;
@{
    ViewData["Message"] = (Model != null) ? Model.Message : "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
