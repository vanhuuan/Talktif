</head>

<body>
    <section>
        <!-- <div class="circle">
            <div class="circle-one"></div>
            <div class="circle-two"></div>
        </div> -->
        <img src="../img/shape.png" class="square" alt="" />
        <div class="form_1">
            <header>
                <!-- <a href="#"><img src="img/logo.jpg" class="logo" alt=""></a> -->
                <div class="logo">
                    <!-- <div class="small-circle-1"></div>
                    <div class="small-circle-2"></div>
                    <div class="small-circle-3"></div> -->
                    <!-- <a href="#">
                        <h2 class="title">TALKTIF</h2>
                    </a> -->
                    <a href=""><img src="../img/logo_main.png" alt="" srcset="" class="logo_main" /></a>
                </div>
            </header>
            <div class="container">
                <div class="row">
                    <div class="textbox col-lg-7 col-md-7 col-sm-7 col-xs-7">
                        <h2 class="name">Chat App Community</h2>
                        <p>
                            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Vitae id totam sint impedit consequuntur culpa quia, sed corrupti doloremque odio delectus iusto esse alias natus voluptatibus earum modi dolorum eligendi.
                            @ViewData["Message"]
                        </p>
                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                        <img src="../img/background-removebg-preview.png" class="img-background" alt="" />
                    </div>
                </div>
            </div>
            <div class="btn-group">
                @* <a class="text-dark">
                <button class="submit mt-4 resize_font mr-1">
                    Get Started
                </button>
                </a> *@
                <a class="submit mt-4 resize_font mr-1 action_home" href="/chat">Get Started</a>
                <button id="#dangnnhap" data-toggle="collapse" aria-expanded="false" class="mt-4 ml-3 resize_font submit">
                    Sign In
                </button>
            </div>
            <hr class="mt-3 mb-0" />
            <footer>
                <div class="copyright">&copy;TalkTif-2021</div>
            </footer>
        </div>
    </section>
    <!-- // Form Login -->
    <div id="wrapper" class="collapse cont">
        <div class="form sign-in">
            <h2>Sign In</h2>
            <form action="/Login/Sign_In" method="post" class="form_user">
                <input id="login_email" type="email" name="Email" placeholder="Email Address" value="" oninput="CheckEmail(event)" />
                <div id="error_email" class="text-center"></div>
                <input id="login_password" type="password" name="password" placeholder="Password" value="" oninput="CheckPassword(event)" />
                <div id="error_password" class="text-center"></div>
                <button type="submit" id="btnDangNhap" class="submit" type="button" >
                    Sign In
                </button>
            </form>
            <p class="forgot-pass"><a asp-controller="Login" asp-action="ForgotPass">Forgot Password ?</a></p>
            

            <div class="social-media">
                <ul>
                    <li>
                        <a href="https://www.facebook.com" target="_blank"><img src="../img/facebook.png" /></a>
                    </li>
                    <li><img src="../img/search (1).png" /></li>
                    <li><img src="../img/github-sign.png" /></li>
                </ul>
            </div>
        </div>
        <div class="sub-cont">
            <div class="img">
                <div class="exit"><img src="../img/remove-button.png" alt="" /></div>
                <div class="img-text m-up">
                    <h2>New here?</h2>
                    <p>Sign up and discover great amount of new opportunities!</p>
                </div>
                <div class="img-text m-in">
                    <h2>One of us?</h2>
                    <p>
                        If you already has an account, just sign in. We've missed you!
                    </p>
                </div>
                <div class="img-btn">
                    <span class="m-up">Sign Up</span>
                    <span class="m-in">Sign In</span>
                </div>
            </div>
            <div class="form sign-up">
                <h2>Sign Up</h2>
                <form action="/Login/Sign_Up" method="post" id="form_login">
                    <input id="name" type="text" name="Name" placeholder="Name" oninput="CheckName(event)" />
                    <div id="error_name" class="text-center"></div>
                    <input id="email" type="email" name = "Email" placeholder="Email" oninput="CheckEmail_SignUp(event)" />
                    <div id="error_email_sign_up" class="text-center"></div>
                    <input id="password" type="password" name = "Password" placeholder="Password" oninput="CheckPassword_SignUp()" />
                    <div id="error_password_sign_up" class="text-center"></div>
                    <input id="confirm_password" type="password" placeholder="Confirm Password" oninput="CheckConfirmPassword(event)" />
                    <div id="error_confirm_password" class="text-center"></div>
                    <button id="Confirm_SignIn" type="submit" class="submit submit_sign_up" data-toggle="collapse" aria-expanded="false" >
              Sign Up Now
            </button>
                </form>
            </div>
        </div>
    </div>
    <div id="Confirm1" class="alert alert-success alert-dismissible collapse">
        <strong>Success!</strong> Create Account Successfully
        <button type="button" class="close1">&times;</button>
    </div>
    <div id="Confirm2" class="alert alert-danger alert-dismissible collapse">
        <strong>Error!</strong> Account does'nt create successfully
        <button type="button" class="close2">&times;</button>
    </div>
    <script>
        $(document).ready(function() {
            $("button").click(function() {
                $("#wrapper").show();
                $("section").addClass("blurs");
            });
            $(".exit").click(function() {
                $("#wrapper").hide();
                $("section").removeClass("blurs");
            });
            $(".close1").click(function() {
                $("#Confirm1").hide();
            });
            $(".close2").click(function() {
                $("#Confirm2").hide();
            });

            $("#login_password").keypress(function(event) {
                var keycode = event.keyCode ? event.keyCode : event.which;
                var email_value = document.getElementById("login_email").value;
                var password_value = document.getElementById("login_password").value;
                if (
                    email_value.slice(-9) === "gmail" + "." + "com" &&
                    password_value != "" &&
                    keycode == "13"
                ) {
                    Home();
                }
            });
            $("#login_email").keypress(function(event) {
                var keycode = event.keyCode ? event.keyCode : event.which;
                var email_value = document.getElementById("login_email").value;
                var password_value = document.getElementById("login_password").value;
                if (
                    email_value.slice(-9) === "gmail" + "." + "com" &&
                    password_value != "" &&
                    keycode == "13"
                ) {
                    Home();
                }
            });
        });
    </script>
