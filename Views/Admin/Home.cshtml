@using Talktif.Models
@{
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    ViewData["Title"] = "Document";
    <link rel="stylesheet" href="../css/Admin.css" />
    Statistic Model = new Statistic();
    if (ViewBag.Statistic != null)
    {
        Model = ViewBag.Statistic;
    }
}
<main>
    <h2 class="dash-title">Overview</h2>
    <div class="dash-cards">
        <div class="card-single">
            <div class="card-body">
                @* <span class="ti-briefcase"></span> *@
                <span class="ti-face-smile"></span>
                <div>
                    <h5>User</h5>
                    <h4>@(Model.numOfUser)</h4>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Admin/Users">View all</a>
            </div>
        </div>

        <div class="card-single">
            <div class="card-body">
                <span class="ti-reload"></span>
                <div>
                    <h5>ChatRooms</h5>
                    <h4>@(Model.numOfChatRoom)</h4>
                </div>
            </div>
            <div class="card-footer">
                <a href="">View all</a>
            </div>
        </div>

        <div class="card-single">
            <div class="card-body">
                <span class="ti-check-box"></span>
                <div>
                    <h5>Report</h5>
                    <h4>@(Model.numOfReport)</h4>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Admin/ReportUser">View all</a>
            </div>
        </div>
        <div class="card-single">
            <div class="card-body">
                <span class="ti-id-badge"></span>
                <div>
                    <h5>Messages</h5>
                    <h4>@(Model.numOfMessage)</h4>
                </div>
            </div>
            <div class="card-footer">
                <a href="#">View all</a>
            </div>
        </div>
    </div>

